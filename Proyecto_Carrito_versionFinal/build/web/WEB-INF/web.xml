<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validar</servlet-name>
        <servlet-class>controlador.Validar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_Imagenes</servlet-name>
        <servlet-class>controlador.Controlador_Imagenes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_ABM</servlet-name>
        <servlet-class>controlador.Controlador_ABM</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validar_abm</servlet-name>
        <servlet-class>controlador.Validar_abm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_crud</servlet-name>
        <servlet-class>controlador.Controlador_crud</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validar</servlet-name>
        <url-pattern>/Validar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_Imagenes</servlet-name>
        <url-pattern>/Controlador_Imagenes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_ABM</servlet-name>
        <url-pattern>/Controlador_ABM</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validar_abm</servlet-name>
        <url-pattern>/Validar_abm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_crud</servlet-name>
        <url-pattern>/Controlador_crud</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <taglib>
            <taglib-uri>/escape</taglib-uri>
            <taglib-location>/WEB-INF/escape-tags.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>
